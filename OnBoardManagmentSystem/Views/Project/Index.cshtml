
@(Html.Kendo().Grid<OnBoardManagement.Models.Project>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.P_Name);
          columns.Bound(c => c.P_Technology);
          columns.Bound(c => c.M_Id)    ;
      


          columns.Command(command => { command.Edit(); command.Destroy(); }).Width(180);
      })
      .ToolBar(toolbar => {
          toolbar.Create();
      })
      .Editable(editable => editable.Mode(GridEditMode.InLine))
      .Pageable()
      .Navigatable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model => { model.Id(p => p.P_Id);


          } )
          .Read(read => read.Action("Projects_Read", "Project"))
          .Create(create => create.Action("Projects_Create", "Project"))
          .Update(update => update.Action("Projects_Update", "Project"))
          .Destroy(destroy => destroy.Action("Projects_Destroy", "Project"))
      )
)

